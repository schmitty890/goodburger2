<div class="container">
  <div class="row title-row">
    <div class="col-xs-12 text-center">
    <img src="/assets/images/goodburger.png" alt="burger" class="img-responsive">
    <h1>Good Burger</h1>
    </div>
  </div>
  <div class="row burger-row">
    <div class="col-xs-6 text-center">
      <div class="row">
        <h2>Burgers Ready For Eating</h2>
          {{#each burgers}}
          {{#unless this.devoured}}
            <div class="col-xs-7">
              <p class="burgers-to-eat">{{this.id}}. {{this.burger_name}}</p>
            </div>
            <div class="col-xs-5">
              <button type="submit" class="btn btn-default devour-button" data-id="{{this.id}}">Devour it!</button>
            </div>
          {{/unless}}
          {{/each}}
      </div>
    </div>
    <div class="col-xs-6 text-center">
      <h2>Eaten Burgers</h2>
        {{#each burgers}}
        {{#if this.devoured}}
          <p class="devoured-burgers">{{this.id}}. {{this.burger_name}}</p>
        {{/if}}
        {{/each}}
    </div>
  </div>
  <div class="row burger-form-row">
    <div class="col-xs-12 text-center">
      <form action="/burgers/new" method="POST" class="create-form">
        <input type="text" class="form-control" name="burger_name" id="new-burger-input">
        <button type="submit" class="btn btn-default" id="new-burger-button">Add That Good Burger!</button>
      </form>
    <p id="add-burger-text">Add in your own custom good burger that you'd like to eat!</p>
    </div>
  </div>
</div>